<Window x:Class="WebBrowserSpellWpf.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="C1SpellChecker: Spell-Checking a WPF WebBrowser control"
    Height="400" Width="608" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- Web Browser Control that hosts a web page. -->
        <WebBrowser Grid.Row="0" x:Name="webBrowser" Source="about:blank"  />        
    </Grid>
</Window>
