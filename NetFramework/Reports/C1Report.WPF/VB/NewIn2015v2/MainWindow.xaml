<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="MainWindow"
    Title="New features of the 2015v2 release" Height="388" Width="869">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="File:"/>
            <ComboBox x:Name="rbFile" Width="200"/>
            <Label Content="Report:"/>
            <ComboBox x:Name="rbReport" Width="150"/>
        </StackPanel>
        <c1:C1DocumentViewer x:Name="viewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="1" BorderThickness="1" />
    </Grid>
</Window>
