<Window x:Class="AdHocSorting.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="354" Width="391" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="246*" />
            <ColumnDefinition Width="123*" />
        </Grid.ColumnDefinitions>
        <DockPanel Margin="0" Name="dockPanel1">
            <Label Height="Auto" Name="label1" Width="Auto" DockPanel.Dock="Top">Sort By:</Label>
            <ListBox Height="Auto" Name="listBox1" Width="Auto" />
        </DockPanel>
        <StackPanel Grid.Column="1" Margin="0" Name="stackPanel1">
            <RadioButton Height="23" Name="rbAscending" Width="Auto" VerticalContentAlignment="Center" Padding="4,0,0,0" Margin="2" IsChecked="True">Ascending</RadioButton>
            <RadioButton Height="23" Name="rbDescending" Width="Auto" VerticalContentAlignment="Center" Padding="4,0,0,0" Margin="2">Descending</RadioButton>
            <Button Height="23" Name="button1" Width="88" Click="button1_Click">Show report</Button>
        </StackPanel>
    </Grid>
</Window>
