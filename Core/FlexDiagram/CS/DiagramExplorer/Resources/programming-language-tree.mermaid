    classDef sixties fill:#7fcdbb,stroke:#333,stroke-width:2px,color:#fff
    classDef classic fill:#45b7d1,stroke:#333,stroke-width:2px,color:#fff
    classDef eighties fill:#6baed6,stroke:#333,stroke-width:2px,color:#fff
    classDef modern fill:#96ceb4,stroke:#333,stroke-width:2px,color:#fff
    classDef recent fill:#dda15e,stroke:#333,stroke-width:2px,color:#fff
    
    class MC root
    class ASM ancient
    class FORTRAN,LISP,ALGOL,COBOL ancient
    class CPL,BASIC,SIMULA,BCPL,B sixties
    class C,PASCAL,SMALLTALK,ML,PROLOG,SQL,SH,SCHEME,AWK classic
    class MODULA,ADA,CPP,OBJC,CL,ELISP,MIRANDA,ERLANG,PERL,BASH,SML eighties
    class F90,VB,PYTHON,RUBY,PHP,JS,JAVA,HASKELL,RACKET,OCAML,DELPHI modern
