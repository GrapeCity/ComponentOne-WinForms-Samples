<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <PlatformTarget>x86</PlatformTarget>
    <ApplicationIcon>C1.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="C1.Win.DashboardLayout" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexChart" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexGrid" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexPivot" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.Input" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.Input.Pickers" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.Ribbon" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.Themes" Version="8.0.20242.*" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.2" />
    <PackageReference Include="System.Data.OleDb" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="Samples\FlexPivotSlicers\Form1.Designer.cs">
      <DependentUpon>Form1.cs</DependentUpon>
    </Compile>
    <Compile Update="Samples\FlexPivotRanges\Form1.Designer.cs">
      <DependentUpon>Form1.cs</DependentUpon>
    </Compile>
    <Compile Update="Samples\FlexPivotRanges\PivotView.Designer.cs">
      <DependentUpon>PivotView.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Samples\FlexPivotSlicers\Form1.resx">
      <DependentUpon>Form1.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Samples\FlexPivotRanges\Form1.resx">
      <DependentUpon>Form1.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Samples\FlexPivotRanges\PivotView.resx">
      <DependentUpon>PivotView.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Include="Data\FlexPivotViews.xml" />
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
