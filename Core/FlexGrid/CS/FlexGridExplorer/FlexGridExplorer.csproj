<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>C1.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="C1.Win.Command" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexGrid" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexGrid.BandedView" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexGrid.GroupPanel" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexGrid.ImportExport" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.FlexGrid.RowDetails" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.Input" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.Input.Pickers" Version="8.0.20242.*" />
    <PackageReference Include="C1.Win.InputPanel" Version="8.0.20242.*" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <CustomToolNamespace>FlexGridExplorer.Properties</CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
